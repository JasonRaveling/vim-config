" let there be light!
syntax on

" remove the .ext~ files, but not the swapfiles
set nobackup
set writebackup
set noswapfile

" indentation / tabs
set expandtab
set autoindent
set smartindent
set tabstop=4
set shiftwidth=4
set softtabstop=4

" Always show current position
set ruler

" Show matching brackets when text indicator is over them
set showmatch

" Highlight search results
set hlsearch

" Makes search act like search in modern browsers
set incsearch
